@model IEnumerable<MindTrack.Models.TaskItem>
@using MindTrack.Models.Enums

@{
    ViewData["Title"] = "TaskHub";
}

<h2 class="mb-3">🧾 TaskHub – Lista de Tarefas</h2>

@if (TempData["ok"] != null)
{
    <div class="alert alert-success">@TempData["ok"]</div>
}

<form method="get" class="row g-2 mb-4">
    <div class="col-md-4">
        <input type="text" name="termo" value="@ViewBag.Termo" class="form-control" placeholder="Buscar tarefa..." />
    </div>
    <div class="col-md-3">
        <select class="form-select" name="prioridade" asp-items="ViewBag.Prioridades">
            <option value="">Todas as prioridades</option>
        </select>
    </div>
    <div class="col-md-3">
        <select class="form-select" name="status" asp-items="ViewBag.Statuses">
            <option value="">Todos os status</option>
        </select>
    </div>
    <div class="col-md-2">
        <button class="btn btn-primary w-100" type="submit">Filtrar</button>
    </div>
</form>

<p>
    <a class="btn btn-success" asp-action="Create">+ Nova Tarefa</a>
</p>

<table class="table table-hover table-striped">
    <thead class="table-light">
        <tr>
            <th>Título</th>
            <th>Prioridade</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in Model)
        {
            <tr>
                <td>@t.Titulo</td>
                <td>@t.Prioridade</td>
                <td>@t.Status</td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@t.Id" class="btn btn-sm btn-outline-secondary">Detalhes</a>
                    <a asp-action="Edit" asp-route-id="@t.Id" class="btn btn-sm btn-outline-primary">Editar</a>
                    <a asp-action="Delete" asp-route-id="@t.Id" class="btn btn-sm btn-outline-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
