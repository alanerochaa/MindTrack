<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MindTrack</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- CSS do site -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <!-- Fonte Poppins -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body>
    <!-- Navbar -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark border-bottom mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-light fw-bold" asp-controller="Home" asp-action="Index">
                    🧠 MindTrack
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-sm-0">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Home" asp-action="Index">🏠 Início</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Tasks" asp-action="Index">📝 TaskHub</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-controller="Focus" asp-action="Index">⏱️ Foco</a>
                        </li>
                    </ul>

                    <span class="navbar-text text-light">
                        <small>FIAP 2025 • Projeto Checkpoint 2</small>
                    </span>
                </div>
            </div>
        </nav>
    </header>

    <!-- Conteúdo Principal -->
    <main role="main" class="container pb-5">
        @RenderBody()
    </main>

    <!-- Rodapé -->
    <footer class="text-center mt-auto">
        <div class="container">
            <span>© 2025 - <strong>MindTrack</strong> | Desenvolvido por <a href="#">CodeGirls</a></span>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
