@{
    ViewData["Title"] = "Bem-vindo ao MindTrack!";
}

<div class="text-center mt-5">
    <div class="p-5 welcome-box">
        <h1 class="mb-3">🧠 Bem-vindo ao <span style="color: #0d47a1;">MindTrack</span>!</h1>

        <p class="lead text-muted mb-4">
            Gerencie suas <strong>tarefas</strong> e <strong>sessões de foco</strong> com produtividade e equilíbrio.
        </p>

        <div class="d-flex justify-content-center gap-3 mt-4">
            <a asp-controller="Tasks" asp-action="Index"
               class="btn btn-success btn-lg px-4 shadow-sm">
                ✅ Ir para o TaskHub
            </a>

            <a asp-controller="Focus" asp-action="Index"
               class="btn btn-info btn-lg px-4 shadow-sm text-white">
                ⏱️ Registrar Foco
            </a>
        </div>
    </div>

    <div class="mt-5">
        <img src="https://cdn-icons-png.flaticon.com/512/4712/4712035.png"
             alt="Productivity" width="120" class="mt-4 opacity-75" />
        <p class="text-secondary mt-3">
            © 2025 - <strong>MindTrack</strong> | Desenvolvido por
            <span class="fw-bold text-primary">CodeGirls</span>
        </p>
    </div>
</div>
